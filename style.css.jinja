<style>
*{
    color: darkslategrey;
    margin: 0;
}
@page{
    background: white;
    size: 21cm 29.7cm;
    margin: 5mm 5mm 5mm 5mm;
}
#docname{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column; 
}
#portrait >svg,img{
    position: absolute;
    width: 15%;
    margin-top: -1.5em;
    margin-left: 1em;
}
#portrait > svg{
    stroke: {{ options.color_primary }};
    stroke-width: 2px;
    fill: none;
}
#portrait > img{
    clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
}
body{
    font-family: 'Helvetica', 'Arial', sans-serif;
    font-weight: 300;
    font-style: normal;
    font-size: 10pt;
    margin: 5px;
}

h1{
    font-size: 150%;
    font-weight: 600;
    margin: 0;
}

h2{
    font-size: 120%;
    font-weight: 600;
    page-break-after: avoid;
    margin: 0;
}

h3{
    font-size: 100%;
    font-weight: 600;
    margin: 0;
}

h5{
    font-size: 80%;
    margin: 0;
    padding: 0 1em 0 0;
}

i{
    padding-right: 5px;
    align-self: center;
}

.stub{
    margin-left: 1em;
    display: flex;
}
.stub::before{
    border-bottom: {{ options.color_primary }} solid 2px;
    width: 0.5em;
    height: 0.4em;
    content: " ";
    margin-right: 0.5em;
    margin-left: -1em;
    /*I have no idea why this needs to be here
    The pseudo element gets the 'margin-left:1em' from for some reason.
    position: absolute // To escape flex flow.*/
}
strong{
    font-weight: 600;
}
.column{
    width: 50%;
}
ul{
    margin: 0;
    padding: 0 0 0 2em;
    list-style-type: none;
}
li:before {
    border-bottom: {{ options.color_primary }} solid 2px;
    width: 0.3em;
    height: 0.4em;
    content: " ";
    margin-left: -1em;
    margin-bottom: 0.3em;
    display: inline-block;
}
li{
    margin: 0;
}
.leaf {
    margin: 0;
    border-left: {{ options.color_primary }} solid 2px;
}
.leaf > :not(.stub){
    margin-left: 2em;
}
.leaf:last-of-type {
    border-left: none;
}
.leaf:last-of-type::before{
    height: 0.5em;
    border-left: {{ options.color_primary }} solid 2px;
    position: absolute;
    content: " ";
}
.column>.leaf:first-of-type{
    padding-top: 1em;
}
{% if options.show_portrait and cv.basics.image %}
 /* Padding out area under portrait */
#contact {
    padding-left: 140px; 
}
#profiles{
    padding-left: 120px; 
    padding-top: 0.2em;
    padding-bottom: 0.2em;
}
{% endif %}
#profiles{
    width: auto;
    font-size:105%; 
}
#footer{
    padding-top: 1em;
    padding-bottom: 1em;
    height: 100%;
}
.flex{
    display: flex;
}
.flex--between{
    justify-content: space-between;
}
.flex--around{
    justify-content: space-around;
}
.flex__body{
    margin-left: 1.5em;
}
.flex--col{
    flex-direction: column;
}
.icon{
    display: none;
}
.align-right{
    text-align: end;
}
.yearrange{
    font-style: italic;
    color: grey;
    white-space: nowrap;
    margin-left: auto;
    margin-right: 1em;
    font-size: 90%;
    font-weight: 100;
}
p{
    margin: 0;
    text-wrap: balance;
}
p.link {
    display: flex;
    align-content: center;
    align-items: center;
}
p.link > i {
    font-size: 18px
}
.hline{
    border-bottom: {{ options.color_primary }} 2px solid;
    width: 100%;
}

@media print{
    body{
        width: 680px;
    }
}
