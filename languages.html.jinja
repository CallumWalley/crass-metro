{% if (cv.languages)|length > 0 %}
<div class="leaf">
    <h2 class="stub" id="languages">Languages</h2>
    <div class="tree">
        {% for group, items in cv.languages|groupby(attribute="rating", default="It's flexlicated") %}
        <div class="leaf">
            <h3 class="stub">{{group}}</h3>
            {%for item in items %}
            <div class="flex">
                <p>{{item.language}}</p> 
            </div>
            {%endfor%}
        </div>
        {% endfor %}
    </div>
</div>
{%endif%}